{
  "$ref": "#/definitions/destinations",
  "definitions": {
    "destinations": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "nacional",
            "internacional"
          ]
        },
        "region": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "enum": [
            "COP",
            "USD"
          ],
          "default": "COP"
        },
        "priceInUsd": {
          "type": "boolean",
          "default": false
        },
        "originalPrice": {
          "type": [
            "number",
            "null"
          ]
        },
        "duration": {
          "type": "number"
        },
        "durationText": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "description": {
          "type": "string"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "rating": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "availability": {
          "type": "number"
        },
        "tag": {
          "type": "string"
        },
        "includes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "notIncludes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "notes": {
          "type": "string"
        },
        "experience": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "itinerary": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": [
                  "string",
                  "number"
                ]
              },
              "title": {
                "type": "string"
              },
              "activities": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "title"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "type",
        "region",
        "price",
        "duration",
        "durationText",
        "image",
        "description",
        "rating",
        "availability",
        "tag"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}