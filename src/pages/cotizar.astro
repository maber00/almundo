---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { Icon } from 'astro-icon/components';

// Obtener el parámetro de destino de la URL si existe
const { searchParams } = Astro.url;
const selectedDestino = searchParams.get('destino') || '';

// Opciones para los selectores
const destinationOptions = [
  { value: "europa", label: "Europa" },
  { value: "caribe", label: "Caribe" },
  { value: "sudamerica", label: "Sudamérica" },
  { value: "norteamerica", label: "Norteamérica" },
  { value: "asia", label: "Asia" },
  { value: "colombia", label: "Colombia (nacional)" },
  { value: "cruceros", label: "Cruceros" },
  { value: "otro", label: "Otro" }
];

const travelTimeOptions = [
  { value: "1-3-meses", label: "En 1-3 meses" },
  { value: "3-6-meses", label: "En 3-6 meses" },
  { value: "6-12-meses", label: "En 6-12 meses" },
  { value: "mas-de-un-año", label: "En más de un año" },
  { value: "sin-planes", label: "No tengo planes todavía" }
];

const budgetOptions = [
  { value: "menos-1m", label: "Menos de $1,000,000 COP" },
  { value: "1m-3m", label: "$1,000,000 - $3,000,000 COP" },
  { value: "3m-5m", label: "$3,000,000 - $5,000,000 COP" },
  { value: "5m-10m", label: "$5,000,000 - $10,000,000 COP" },
  { value: "mas-10m", label: "Más de $10,000,000 COP" },
  { value: "no-especificar", label: "Prefiero no especificar" }
];

const travelWithOptions = [
  { value: "solo", label: "Solo/a" },
  { value: "pareja", label: "En pareja" },
  { value: "familia", label: "Con familia (niños)" },
  { value: "amigos", label: "Con amigos" },
  { value: "grupo-empresarial", label: "Grupo empresarial" }
];

const contactMethodOptions = [
  { value: "whatsapp", label: "WhatsApp" },
  { value: "llamada", label: "Llamada telefónica" },
  { value: "email", label: "Correo electrónico" },
  { value: "videollamada", label: "Videollamada" }
];

const contactTimeOptions = [
  { value: "mañana", label: "Mañana (8am - 12pm)" },
  { value: "tarde", label: "Tarde (12pm - 5pm)" },
  { value: "noche", label: "Noche (5pm - 8pm)" }
];
---

<Layout title="Solicitar Cotización | AL mundo Tour" description="Solicita una cotización personalizada para tu próximo viaje con AL mundo Tour y recibe una propuesta a medida según tus preferencias y presupuesto.">
  <Header />
  
  <main>
    <!-- Hero section -->
    <section class="bg-blue-600 text-white py-16 pt-40">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Solicitar Cotización</h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          Completa el formulario a continuación y recibe una cotización personalizada para tu viaje soñado.
        </p>
      </div>
    </section>
    
    <!-- Breadcrumbs -->
    <section class="bg-gray-50 py-4 border-b border-gray-200">
      <div class="container mx-auto px-4">
        <div class="flex items-center text-sm text-gray-500">
          <a href="/" class="hover:text-blue-600">Inicio</a>
          <span class="mx-2">➡️</span>
          <span class="text-gray-700">Solicitar Cotización</span>
        </div>
      </div>
    </section>
    
    <!-- Formulario de cotización -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="bg-white rounded-lg shadow-xl overflow-hidden">
            <div class="bg-blue-600 px-8 py-10 text-white text-center">
              <div class="mb-6 text-6xl">✈️</div>
              <h2 class="text-3xl font-bold mb-4">¡Cuéntanos sobre tu viaje ideal!</h2>
              <p class="text-xl text-blue-100 max-w-2xl mx-auto">
                Completa este formulario y uno de nuestros asesores especializados preparará una cotización a medida para ti.
              </p>
            </div>
            
            <!-- Formulario con Netlify Forms -->
           
            <form 
            id="lead-capture-form" 
            class="p-8 md:p-10"
            name="cotizacion"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
          >
          <input type="hidden" name="form-name" value="cotizacion" />
  
  <p class="hidden">
    <label>No llenes esto si eres humano: <input name="bot-field" /></label>
  </p>
              <!-- Campo oculto para destino preseleccionado -->
              {selectedDestino && <input type="hidden" name="destino_preseleccionado" value={selectedDestino} />}
              
              <!-- Sección: Datos Básicos -->
              <div class="mb-10">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 pb-2 border-b border-gray-200">Datos de Contacto</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <!-- Nombre completo -->
                  <div class="col-span-2 md:col-span-1">
                    <label for="full_name" class="block text-sm font-medium text-gray-700 mb-2">
                      Nombre completo <span class="text-red-500">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="full_name" 
                      name="full_name" 
                      required 
                      minlength="3"
                      class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Ingresa tu nombre completo"
                    />
                  </div>
                  
                  <!-- Correo electrónico -->
                  <div class="col-span-2 md:col-span-1">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                      Correo electrónico <span class="text-red-500">*</span>
                    </label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email" 
                      required
                      class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                      placeholder="ejemplo@correo.com"
                    />
                  </div>
                  
                  <!-- Teléfono -->
                  <div class="col-span-2 md:col-span-1">
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                      Teléfono (WhatsApp) <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="text-gray-500">+57</span>
                      </div>
                      <input 
                        type="tel" 
                        id="phone" 
                        name="phone" 
                        required
                        class="block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                        placeholder="300 123 4567"
                        pattern="[0-9]{10}"
                        title="Ingresa un número de teléfono válido de 10 dígitos"
                      />
                    </div>
                    <p class="mt-2 text-xs text-gray-500">Formato: 10 dígitos sin espacios ni guiones</p>
                  </div>
                  
                  <!-- Método de contacto -->
                  <div class="col-span-2 md:col-span-1">
                    <label for="contact_method" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Cómo prefieres que te contactemos? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="contact_method" 
                        name="contact_method"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {contactMethodOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Sección: Detalles del Viaje -->
              <div class="mb-10">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 pb-2 border-b border-gray-200">Detalles del Viaje</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <!-- Destino interesado -->
                  <div>
                    <label for="destination" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Qué destino te interesa? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="destination" 
                        name="destination"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona un destino...</option>
                        {destinationOptions.map(option => (
                          <option value={option.value} selected={selectedDestino === option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Cuándo planea viajar -->
                  <div>
                    <label for="travel_time" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Cuándo planeas viajar? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="travel_time" 
                        name="travel_time"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {travelTimeOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Presupuesto -->
                  <div>
                    <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">
                      Presupuesto aproximado por persona <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="budget" 
                        name="budget"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {budgetOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Con quién viajaría -->
                  <div>
                    <label for="travel_with" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Con quién viajarías? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="travel_with" 
                        name="travel_with"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {travelWithOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Cantidad de viajeros -->
                  <div>
                    <label for="travelers" class="block text-sm font-medium text-gray-700 mb-2">
                      Número de viajeros <span class="text-red-500">*</span>
                    </label>
                    <input 
                      type="number" 
                      id="travelers" 
                      name="travelers" 
                      min="1"
                      max="50"
                      required
                      class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Ej: 2"
                    />
                  </div>
                  
                  <!-- Duración aproximada -->
                  <div>
                    <label for="duration" class="block text-sm font-medium text-gray-700 mb-2">
                      Duración aproximada en días <span class="text-red-500">*</span>
                    </label>
                    <input 
                      type="number" 
                      id="duration" 
                      name="duration" 
                      min="1"
                      max="90"
                      required
                      class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Ej: 7"
                    />
                  </div>
                  
                  <!-- Fecha aproximada -->
                  <div>
                    <label for="travel_date" class="block text-sm font-medium text-gray-700 mb-2">
                      Fecha aproximada de viaje
                    </label>
                    <input 
                      type="date" 
                      id="travel_date" 
                      name="travel_date"
                      class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    />
                  </div>
                  
                  <!-- Horario de contacto -->
                  <div>
                    <label for="contact_time" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿En qué horario prefieres que te contactemos?
                    </label>
                    <div class="relative">
                      <select 
                        id="contact_time" 
                        name="contact_time"
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {contactTimeOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Requerimientos especiales -->
                <div class="mt-6">
                  <label for="special_requirements" class="block text-sm font-medium text-gray-700 mb-2">
                    Requerimientos especiales o preferencias
                  </label>
                  <textarea 
                    id="special_requirements" 
                    name="special_requirements"
                    rows="5"
                    class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Cuéntanos cualquier detalle adicional o requisito especial para tu viaje..."
                  ></textarea>
                </div>
              </div>
              
              <!-- Sección: Consentimiento -->
              <div class="mb-10">
                <div class="space-y-5">
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="receive_promotions" 
                      name="receive_promotions" 
                      value="yes"
                      class="h-5 w-5 mt-1 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                    />
                    <label for="receive_promotions" class="ml-3 text-base text-gray-700">
                      Quiero recibir promociones y ofertas exclusivas de viajes
                    </label>
                  </div>
                  
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="accept_communications" 
                      name="accept_communications" 
                      value="yes"
                      required
                      class="h-5 w-5 mt-1 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                    />
                    <label for="accept_communications" class="ml-3 text-base text-gray-700">
                      Acepto recibir comunicaciones de AL mundo Tour y he leído la 
                      <a href="/politica-privacidad" class="text-blue-600 hover:underline">política de privacidad</a>
                      <span class="text-red-500">*</span>
                    </label>
                  </div>
                </div>
              </div>
              
              <!-- Botón de envío -->
              <div class="flex justify-center">
                <button 
                  type="submit"
                  class="bg-blue-600 text-white px-10 py-4 rounded-md font-bold text-lg hover:bg-blue-700 transition-colors flex items-center"
                >
                  <span class="mr-3 text-xl">📤</span>
                  Solicitar cotización
                </button>
              </div>
              
              <!-- Mensaje de estado -->
              <div id="form-status" class="mt-8 text-center hidden">
                <div id="form-success" class="bg-green-50 text-green-700 p-6 rounded-lg shadow-sm hidden">
                  <div class="text-5xl mb-4">✅</div>
                  <p class="text-lg font-medium">¡Hemos recibido tu solicitud de cotización! Un asesor se pondrá en contacto contigo muy pronto con una propuesta personalizada.</p>
                </div>
                
                <div id="form-error" class="bg-red-50 text-red-700 p-6 rounded-lg shadow-sm hidden">
                  <div class="text-5xl mb-4">⚠️</div>
                  <p class="text-lg font-medium">Hubo un problema al enviar tu solicitud. Por favor, intenta nuevamente o contáctanos directamente por WhatsApp.</p>
                </div>
              </div>
            </form>
          </div>
          
          <!-- Información adicional -->
          <div class="mt-12 bg-white rounded-lg shadow-lg p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">¿Por qué solicitar una cotización con nosotros?</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="flex items-start">
                <div class="bg-blue-100 p-2 rounded-full mr-3 flex-shrink-0">
                  <Icon name="tabler:clock" class="w-6 h-6 text-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Respuesta rápida</h4>
                  <p class="text-gray-600">Recibirás tu cotización en menos de 24 horas hábiles.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-blue-100 p-2 rounded-full mr-3 flex-shrink-0">
                  <Icon name="tabler:adjustments" class="w-6 h-6 text-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Cotización personalizada</h4>
                  <p class="text-gray-600">Ajustada a tus preferencias, presupuesto y necesidades específicas.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-blue-100 p-2 rounded-full mr-3 flex-shrink-0">
                  <Icon name="tabler:cash" class="w-6 h-6 text-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Sin compromiso</h4>
                  <p class="text-gray-600">Solicitar una cotización no te obliga a realizar la compra.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-blue-100 p-2 rounded-full mr-3 flex-shrink-0">
                  <Icon name="tabler:users" class="w-6 h-6 text-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-gray-900">Asesoría especializada</h4>
                  <p class="text-gray-600">Nuestros expertos en viajes te brindarán las mejores recomendaciones.</p>
                </div>
              </div>
            </div>
            
            <div class="mt-8 pt-6 border-t border-gray-200">
              <h4 class="font-medium text-gray-900 mb-3">¿Prefieres contactarnos directamente?</h4>
              <div class="flex flex-wrap gap-4">
                <a 
                  href="https://wa.me/573165276338?text=Hola, me gustaría solicitar una cotización para mi viaje" 
                  target="_blank"
                  class="flex items-center text-green-600 hover:text-green-700"
                >
                  <Icon name="tabler:brand-whatsapp" class="w-5 h-5 mr-1" />
                  WhatsApp: +57 316 527 6338
                </a>
                
                <a 
                  href="tel:+573165276338"
                  class="flex items-center text-blue-600 hover:text-blue-700"
                >
                  <Icon name="tabler:phone" class="w-5 h-5 mr-1" />
                  Teléfono: +57 316 527 6338
                </a>
                
                <a 
                  href="mailto:info@almundotour.com"
                  class="flex items-center text-blue-600 hover:text-blue-700"
                >
                  <Icon name="tabler:mail" class="w-5 h-5 mr-1" />
                  Email: info@almundotour.com
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form[name="cotizacion"]') as HTMLFormElement;
    const formStatus = document.getElementById('form-status');
    const formSuccess = document.getElementById('form-success');
    const formError = document.getElementById('form-error');
    
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        console.log('Formulario enviado');
        
        // Recolectar todos los datos del formulario
        const formData = new FormData(form);
        const formObject: Record<string, string> = {};
        
        formData.forEach((value, key) => {
          formObject[key] = value.toString();
        });
        
        try {
          // 1. Enviar a Netlify Forms como respaldo
          await fetch('/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams(formData as any).toString()
          });
          
          console.log('Enviando a función de Netlify...');
          
          // 2. Enviar a nuestra función de Netlify para Airtable
          const airtableResponse = await fetch('/.netlify/functions/submit-quote', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formObject)
          });
          
          console.log('Respuesta recibida:', airtableResponse.status);
          
          // Verificar si la respuesta es JSON
          const contentType = airtableResponse.headers.get('content-type');
          if (!contentType || !contentType.includes('application/json')) {
            // Si no es JSON, obtener el texto para diagnóstico
            const errorText = await airtableResponse.text();
            console.error('Respuesta no JSON:', errorText);
            throw new Error(`Respuesta inesperada del servidor: ${airtableResponse.status} ${airtableResponse.statusText}`);
          }
          
          const responseData = await airtableResponse.json();
          console.log('Datos de respuesta:', responseData);
          
          if (airtableResponse.ok && responseData.success) {
            console.log('Formulario procesado con éxito');
            // Mostrar mensaje de éxito
            if (formStatus) formStatus.classList.remove('hidden');
            if (formSuccess) formSuccess.classList.remove('hidden');
            form.reset();
            
            // Scroll hacia el mensaje
            if (formSuccess) {
              window.scrollTo({ 
                top: formSuccess.offsetTop || window.scrollY, 
                behavior: 'smooth' 
              });
            }
          } else {
            throw new Error(responseData.message || 'Error al procesar la solicitud');
          }
        } catch (error) {
          console.error('Error detallado:', error);
          if (formStatus) formStatus.classList.remove('hidden');
          if (formError) formError.classList.remove('hidden');
          
          if (formError) {
            const errorMsg = formError.querySelector('p');
            if (errorMsg) {
              errorMsg.textContent = 'Error al enviar el formulario: ' + 
                (error instanceof Error ? error.message : 'Error desconocido');
            }
          }
        }
      });
    }
  });
</script>