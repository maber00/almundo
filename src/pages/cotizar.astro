                  <!-- Destino interesado -->
                  <div>
                    <label for="destination" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Qué destino te interesa? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="destination" 
                        name="destination"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona un destino...</option>
                        {destinationOptions.map(option => (
                          <option value={option.value} selected={selectedDestino === option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Cuándo planea viajar -->
                  <div>
                    <label for="travel_time" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Cuándo planeas viajar? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="travel_time" 
                        name="travel_time"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {travelTimeOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Presupuesto -->
                  <div>
                    <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">
                      Presupuesto aproximado por persona <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="budget" 
                        name="budget"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {budgetOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Con quién viajaría -->
                  <div>
                    <label for="travel_with" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Con quién viajarías? <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                      <select 
                        id="travel_with" 
                        name="travel_with"
                        required
                        class="block appearance-none w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white"
                      >
                        <option value="">Selecciona una opción...</option>
                        {travelWithOptions.map(option => (
                          <option value={option.value}>{option.label}</option>
                        ))}
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                        <Icon name="tabler:chevron-down" class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                  
                  <!-- Cantidad de viajeros -->
                  <div>
                    <label for="travelers" class="block text-sm font-medium text-gray-700 mb-2">
                      Número de viajeros <span class="text-red-500">*</span>
                    </label>
                    <input 
                      type="number" 
                      id="travelers" 
                      name="travelers" 
                      min="1"
                      max="50"
                      required
                      class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Ej: 2"
                    />
                  </div>

                  <!-- Sección para viajero solo -->
<!-- Sección para viajero solo -->
<div id="solo-traveler-section" style="display: none;" class="mt-4">
  <div class="bg-blue-50 p-5 rounded-lg">
    <h4 class="text-lg font-medium text-gray-900 mb-3">Información del viajero</h4>
    
    <div>
      <label for="traveler_age" class="block text-sm font-medium text-gray-700 mb-1">
        Edad <span class="text-red-500">*</span>
      </label>
      <input 
        type="number" 
        id="traveler_age" 
        name="traveler_age" 
        min="1"
        max="120"
        data-required="true"
        class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
        placeholder="Ej: 35"
      />
    </div>
  </div>
</div>

<!-- Sección para pareja -->
<div id="couple-section" style="display: none;" class="mt-4">
  <div class="bg-blue-50 p-5 rounded-lg">
    <h4 class="text-lg font-medium text-gray-900 mb-3">Información de la pareja</h4>
    
    <div>
      <label for="couple_ages" class="block text-sm font-medium text-gray-700 mb-1">
        Edades de ambos <span class="text-red-500">*</span>
      </label>
      <input 
        type="text" 
        id="couple_ages" 
        name="couple_ages" 
        data-required="true"
        class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
        placeholder="Ej: 30 y 32 años"
      />
    </div>
  </div>
</div>

<!-- Sección para familia -->
<div id="family-section" style="display: none;" class="mt-4">
  <div class="bg-blue-50 p-5 rounded-lg">
    <h4 class="text-lg font-medium text-gray-900 mb-3">Información de la familia</h4>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label for="adults_count" class="block text-sm font-medium text-gray-700 mb-1">
