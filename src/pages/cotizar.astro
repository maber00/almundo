<script>
  document.addEventListener('DOMContentLoaded', () => {
  // Referencias a elementos del formulario con verificación de tipo
  const form = document.querySelector('form[name="cotizacion"]') as HTMLFormElement | null;
  const formStatus = document.getElementById('form-status');
  const formSuccess = document.getElementById('form-success');
  const formError = document.getElementById('form-error');
  const travelWithSelect = document.getElementById('travel_with') as HTMLSelectElement | null;
  
  // Referencias a secciones dinámicas (inicialmente ocultas)
  const soloSection = document.getElementById('solo-traveler-section');
  const coupleSection = document.getElementById('couple-section');
  const familySection = document.getElementById('family-section');
  const friendsSection = document.getElementById('friends-section');
  const businessSection = document.getElementById('business-section');
  
  // Ocultar todas las secciones dinámicas al inicio
  function hideAllDynamicSections(): void {
    const sections = [soloSection, coupleSection, familySection, friendsSection, businessSection];
    sections.forEach(section => {
      if (section) {
        section.style.display = 'none';
        
        // Desactivar campos requeridos cuando están ocultos
        const requiredInputs = section.querySelectorAll('[required]');
        requiredInputs.forEach((input: Element) => {
          if (input instanceof HTMLElement) {
            input.setAttribute('data-required', 'true');
            input.removeAttribute('required');
          }
        });
      }
    });
  }
  
  // Mostrar sección específica y configurar sus campos
  function showSection(section: HTMLElement | null): void {
    if (section) {
      section.style.display = 'block';
      
      // Reactivar campos requeridos
      const dataRequiredInputs = section.querySelectorAll('[data-required="true"]');
      dataRequiredInputs.forEach((input: Element) => {
        if (input instanceof HTMLElement) {
          input.setAttribute('required', '');
        }
      });
    }
  }
  
  // Inicializar estado del formulario
  hideAllDynamicSections();
  
  // Evento para manejar el cambio en "Con quién viajaría"
  if (travelWithSelect) {
    travelWithSelect.addEventListener('change', function() {
      hideAllDynamicSections();
      
      // Mostrar sección correspondiente según la selección
      const value = this.value;
      switch(value) {
        case 'solo':
          showSection(soloSection);
          break;
        case 'pareja':
          showSection(coupleSection);
          break;
        case 'familia':
          showSection(familySection);
          break;
        case 'amigos':
          showSection(friendsSection);
          break;
        case 'grupo-empresarial':
          showSection(businessSection);
          break;
      }
    });
    
    // Disparar el evento change para configurar el formulario según el valor inicial
    const event = new Event('change');
    travelWithSelect.dispatchEvent(event);
  }
  
  // Manejar campo de niños en sección familiar
  const hasChildrenSelect = document.getElementById('has_children') as HTMLSelectElement | null;
  const childrenDetailsSection = document.getElementById('children-details-section');
  
  if (hasChildrenSelect && childrenDetailsSection) {
    hasChildrenSelect.addEventListener('change', function() {
      if (this.value === 'si') {
        childrenDetailsSection.style.display = 'block';
        const dataRequiredInputs = childrenDetailsSection.querySelectorAll('[data-required="true"]');
        dataRequiredInputs.forEach((input: Element) => {
          if (input instanceof HTMLElement) {
            input.setAttribute('required', '');
          }
        });
      } else {
        childrenDetailsSection.style.display = 'none';
        const requiredInputs = childrenDetailsSection.querySelectorAll('[required]');
        requiredInputs.forEach((input: Element) => {
          if (input instanceof HTMLElement) {
            input.setAttribute('data-required', 'true');
            input.removeAttribute('required');
          }
        });
      }
    });
    
    // Configurar estado inicial
    const childrenEvent = new Event('change');
    hasChildrenSelect.dispatchEvent(childrenEvent);
  }
  
  // Manejo de envío del formulario
  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      console.log('Formulario enviado');
      
      // Mostrar indicador de carga
      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement | null;
      let originalBtnText = '';
      
      if (submitBtn) {
        originalBtnText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner">⏳</span> Enviando...';
      }
      
      // Recolectar todos los datos del formulario
      const formData = new FormData(form);
      const formObject: Record<string, string> = {};
      
      formData.forEach((value, key) => {
        formObject[key] = value.toString();
      });
      
      try {
        // 1. Enviar a Netlify Forms como respaldo
        await fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(formData as any).toString()
        });
        
        console.log('Enviando a función de Netlify...');
        
        // 2. Enviar a nuestra función de Netlify para Airtable
        const airtableResponse = await fetch('/.netlify/functions/submit-quote', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formObject)
        });
        
        console.log('Respuesta recibida:', airtableResponse.status);
        
        // Verificar si la respuesta es JSON
        const contentType = airtableResponse.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          // Si no es JSON, obtener el texto para diagnóstico
          const errorText = await airtableResponse.text();
          console.error('Respuesta no JSON:', errorText);
          throw new Error(`Respuesta inesperada del servidor: ${airtableResponse.status} ${airtableResponse.statusText}`);
        }
        
        const responseData = await airtableResponse.json();
        console.log('Datos de respuesta:', responseData);
        
        if (airtableResponse.ok && responseData.success) {
          console.log('Formulario procesado con éxito');
          // Mostrar mensaje de éxito
          if (formStatus) formStatus.classList.remove('hidden');
          if (formSuccess) formSuccess.classList.remove('hidden');
          form.reset();
          
          // Ocultar secciones dinámicas después de enviar el form
          hideAllDynamicSections();
          
          // Scroll hacia el mensaje
          if (formSuccess) {
            window.scrollTo({ 
              top: formSuccess.offsetTop - 100, 
              behavior: 'smooth' 
            });
          }
        } else {
          throw new Error(responseData.message || 'Error al procesar la solicitud');
        }
      } catch (error) {
        console.error('Error detallado:', error);
        if (formStatus) formStatus.classList.remove('hidden');
        if (formError) formError.classList.remove('hidden');
        
        if (formError) {
          const errorMsg = formError.querySelector('p');
          if (errorMsg) {
            errorMsg.textContent = 'Error al enviar el formulario: ' + 
              (error instanceof Error ? error.message : 'Error desconocido');
          }
        }
        
        // Scroll al mensaje de error
        if (formError) {
          window.scrollTo({ 
            top: formError.offsetTop - 100, 
            behavior: 'smooth' 
          });
        }
      } finally {
        // Restaurar el botón de envío
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalBtnText;
        }
      }
    });
  }
});
</script>