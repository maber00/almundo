---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import DestinationCard from '../../../components/destinations/DestinationCard.astro';
import SelectFilter from '../../../components/common/SelectFilter.astro';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';
import { getFilteredDestinations } from '../../../utils/content';

interface Destination {
  id: string;
  name: string;
  type: string;
  price: number;
  originalPrice?: number | string | null;
  priceInUsd?: boolean;
  duration: number;
  durationText: string;
  image: string;
  rating: number;
  availability: number;
  tag?: string;
  tags?: string[];
  region?: string;
  description: string;
  slug: string;
}

// Obtener par√°metros de b√∫squeda de la URL
const { searchParams } = Astro.url;
const destination_type = searchParams.get('destination_type') || '';
const budget = searchParams.get('budget') || '';
const duration = searchParams.get('duration') || '';
const travel_date = searchParams.get('travel_date') || '';
const region = searchParams.get('region') || '';

// Crear objeto de filtros a partir de los par√°metros URL
const filters = {
  destination_type: destination_type || undefined,
  budget: budget || undefined,
  duration: duration || undefined,
  travel_date: travel_date || undefined,
  region: region || undefined
};

// Obtener destinos filtrados 
const destinations: Destination[] = await getFilteredDestinations(filters);

// Para las secciones espec√≠ficas, obtener destinos por tipo
let nationalDestinations: Destination[] = [];
let internationalDestinations: Destination[] = [];
let offerDestinations: Destination[] = [];

try {
  // Obtener todas las colecciones
  const allDestinations = await getCollection('destinations');
  
  // Filtrar por tipo
  nationalDestinations = allDestinations
    .filter(entry => entry.data.type === 'nacional')
    .map(entry => ({ ...entry.data, slug: entry.slug } as Destination))
    .slice(0, 6);

  internationalDestinations = allDestinations
    .filter(entry => entry.data.type === 'internacional')
    .map(entry => ({ ...entry.data, slug: entry.slug } as Destination))
    .slice(0, 6);

  // Filtrar ofertas (con tag "Oferta" o precio original mayor al precio actual)
  offerDestinations = allDestinations
    .filter(entry => {
      const originalPrice = entry.data.originalPrice
        ? (typeof entry.data.originalPrice === 'string'
            ? Number((entry.data.originalPrice as string).replace(/[.,]/g, '')) || 0
            : entry.data.originalPrice)
        : 0;
      return (originalPrice > 0 && originalPrice > entry.data.price) || entry.data.tag === 'Oferta' || 
        (entry.data.tags && entry.data.tags.includes('Oferta'));
    })
    .map(entry => ({ ...entry.data, slug: entry.slug } as Destination))
    .slice(0, 6);
} catch (error) {
  console.error('Error al obtener destinos:', error);
}

// Tipos de destinos para el buscador
const destinationTypes = [
  { id: "nacional", label: "Nacional" },
  { id: "internacional", label: "Internacional" },
  { id: "caribe", label: "Caribe" },
  { id: "europa", label: "Europa" },
  { id: "norteamerica", label: "Norteam√©rica" },
  { id: "sudamerica", label: "Sudam√©rica" },
  { id: "asia", label: "Asia" }
];

// Rangos de presupuesto para el select
const budgetRanges = [
  { id: "budget-1", label: "Hasta $1,000,000" },
  { id: "budget-2", label: "$1,000,000 - $3,000,000" },
  { id: "budget-3", label: "$3,000,000 - $5,000,000" },
  { id: "budget-4", label: "$5,000,000 - $10,000,000" },
  { id: "budget-5", label: "M√°s de $10,000,000" }
];

// Duraciones de viaje
const tripDurations = [
  { id: "duration-1", label: "3-5 d√≠as" },
  { id: "duration-2", label: "6-8 d√≠as" },
  { id: "duration-3", label: "9-12 d√≠as" },
  { id: "duration-4", label: "13-15 d√≠as" },
  { id: "duration-5", label: "M√°s de 15 d√≠as" }
];

// Regiones para el filtrado
const regionOptions = [
  { id: "all", label: "Todas las regiones" },
  { id: "caribe", label: "Caribe" },
  { id: "andina", label: "Andina" },
  { id: "pacifica", label: "Pac√≠fica" },
  { id: "norteamerica", label: "Norteam√©rica" },
  { id: "sudamerica", label: "Sudam√©rica" },
  { id: "europa", label: "Europa" },
  { id: "asia", label: "Asia" }
];
---

