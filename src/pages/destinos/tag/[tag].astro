// T칤tulo y descripci칩n de la p치gina seg칰n el tag
const pageTitle = `Destinos de ${formattedTag}`;
let pageDescription = '';

switch(formattedTag) {
  case 'Aventura':
    pageDescription = 'Descubre destinos incre칤bles llenos de adrenalina y aventuras al aire libre.';
    break;
  case 'Playa':
    pageDescription = 'Rel치jate en las playas m치s hermosas con arena blanca y aguas cristalinas.';
