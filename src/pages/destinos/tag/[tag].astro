            <!-- Regi칩n -->
            <SelectFilter
              name="region"
              label="Regi칩n"
              options={regions}
              placeholder="Todas las regiones"
              selectedValue={selectedRegion}
            />
            
            <!-- Presupuesto -->
            <SelectFilter
              name="budget"
              label="Presupuesto"
              options={budgetRanges}
              placeholder="Cualquier presupuesto"
              selectedValue={selectedBudget}
            />
            
            <!-- Duraci칩n -->
            <SelectFilter
              name="duration"
              label="Duraci칩n"
              options={tripDurations}
              placeholder="Cualquier duraci칩n"
              selectedValue={selectedDuration}
            />
            
            <!-- Botones de acci칩n -->
            <div class="flex items-end gap-3">
              <button
                type="submit"
                class={`flex-grow ${buttonColor} text-white py-2 px-3 rounded-md font-medium transition-colors flex items-center justify-center`}
