    break;
  case 'Oferta':
    pageDescription = 'Encuentra las mejores ofertas en destinos incre칤bles a precios especiales.';
    break;
  default:
    pageDescription = 'Descubre destinos incre칤bles seleccionados especialmente para ti.';
}
