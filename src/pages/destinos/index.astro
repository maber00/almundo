---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import DestinationCard from '../../components/destinations/DestinationCard.astro';
import { getFilteredDestinations } from '../../utils/content.js';

// Definir el tipo de destino (puedes colocarlo en un archivo separado si prefieres)
type Destination = {
  id: string;
  name: string;
  type: string;
  price: number;
  priceInUsd: boolean;
  originalPrice: number | null;
  image: string;
  tag: string;
  durationText: string;
  rating: number;
  availability: number;
  // Otras propiedades...
};

// Obtener par√°metros de b√∫squeda de la URL
const { searchParams } = Astro.url;
const destination_type = searchParams.get('destination_type') || '';
const budget = searchParams.get('budget') || '';
const duration = searchParams.get('duration') || '';
const travel_date = searchParams.get('travel_date') || '';

// Obtener destinos filtrados
const destinations = await getFilteredDestinations({
  destination_type,
  budget,
  duration,
  travel_date
}) as Destination[]; // A√±adir aserci√≥n de tipo aqu√≠

// Traducir valores de los filtros para mostrarlos
const destinationTypeLabels: Record<string, string> = {
  'nacional': 'Nacional',
  'internacional': 'Internacional',
  'caribe': 'Caribe',
  'europa': 'Europa',
  'norteamerica': 'Norteam√©rica',
  'sudamerica': 'Sudam√©rica',
  'asia': 'Asia'
};

const budgetLabels: Record<string, string> = {
  'budget-1': 'Hasta $1,000,000',
  'budget-2': '$1,000,000 - $3,000,000',
  'budget-3': '$3,000,000 - $5,000,000',
  'budget-4': '$5,000,000 - $10,000,000',
  'budget-5': 'M√°s de $10,000,000'
};

const durationLabels: Record<string, string> = {
  'duration-1': '3-5 d√≠as',
  'duration-2': '6-8 d√≠as',
  'duration-3': '9-12 d√≠as',
  'duration-4': '13-15 d√≠as',
  'duration-5': 'M√°s de 15 d√≠as'
};

// Construir lista de filtros aplicados para mostrar
const activeFilters = [];
if (destination_type && destinationTypeLabels[destination_type as keyof typeof destinationTypeLabels]) {
  activeFilters.push({
    label: 'Tipo de destino',
    value: destinationTypeLabels[destination_type as keyof typeof destinationTypeLabels]
  });
}

if (budget && budgetLabels[budget as keyof typeof budgetLabels]) {
  activeFilters.push({
    label: 'Presupuesto',
    value: budgetLabels[budget as keyof typeof budgetLabels]
  });
}

if (duration && durationLabels[duration as keyof typeof durationLabels]) {
  activeFilters.push({
    label: 'Duraci√≥n',
    value: durationLabels[duration as keyof typeof durationLabels]
  });
}

if (travel_date) {
  const formattedDate = new Date(travel_date).toLocaleDateString('es-CO', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
  
  activeFilters.push({
    label: 'Fecha de viaje',
    value: formattedDate
  });
}

// T√≠tulo de la p√°gina seg√∫n los filtros
let pageTitle = 'Todos nuestros destinos';

if (destination_type && destinationTypeLabels[destination_type as keyof typeof destinationTypeLabels]) {
  pageTitle = `Destinos ${destinationTypeLabels[destination_type as keyof typeof destinationTypeLabels]}`;
}
---

<Layout title={`${pageTitle} | AL mundo Tour`} description="Encuentra tu destino de viaje ideal con Amundo Tour, tu agencia de viajes de confianza en Colombia.">
  <Header />
  
  <main>
    <section class="bg-blue-50 py-12">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{pageTitle}</h1>
        
        <!-- Breadcrumbs -->
        <div class="flex items-center text-sm text-gray-500 mb-8">
          <a href="/" class="hover:text-blue-600">Inicio</a>
          <span class="mx-2">‚û°Ô∏è</span>
          <a href="/destinos" class="hover:text-blue-600">Destinos</a>
          
          {destination_type && (
            <>
              <span class="mx-2">‚û°Ô∏è</span>
              <span class="text-gray-700">{destinationTypeLabels[destination_type as keyof typeof destinationTypeLabels]}</span>
            </>
          )}
        </div>
        
        <!-- Filtros activos -->
        {activeFilters.length > 0 && (
          <div class="bg-white p-4 rounded-lg shadow-sm mb-8">
            <div class="flex flex-wrap items-center gap-2">
              <span class="font-medium text-gray-700">Filtros aplicados:</span>
              
              {activeFilters.map((filter) => (
                <div class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm flex items-center">
                  <span class="font-medium mr-1">{filter.label}:</span>
                  {filter.value}
                </div>
              ))}
              
              <a href="/destinos" class="ml-auto text-sm text-red-600 hover:text-red-800 flex items-center">
                <span class="mr-1">‚ùå</span>
                Limpiar filtros
              </a>
            </div>
          </div>
        )}
      </div>
    </section>
    
    <!-- Resultados de b√∫squeda -->
    
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">Explora nuestros destinos</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <!-- Destinos Nacionales -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="h-48 relative">
              <img src="/images/uploads/colombia-banner.jpg" alt="Destinos Nacionales" class="w-full h-full object-cover" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
                <div class="p-6">
                  <h3 class="text-2xl font-bold text-white mb-2">Destinos Nacionales</h3>
                  <p class="text-white/80 mb-4">Lo mejor de Colombia</p>
                  <a href="/destinos/nacionales" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                    Ver todos
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Destinos Internacionales -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="h-48 relative">
              <img src="/images/uploads/internacional-banner.jpg" alt="Destinos Internacionales" class="w-full h-full object-cover" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
                <div class="p-6">
                  <h3 class="text-2xl font-bold text-white mb-2">Destinos Internacionales</h3>
                  <p class="text-white/80 mb-4">Explora el mundo</p>
                  <a href="/destinos/internacionales" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                    Ver todos
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Ofertas -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="h-48 relative">
              <img src="/images/uploads/ofertas-banner.jpg" alt="Ofertas Especiales" class="w-full h-full object-cover" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
                <div class="p-6">
                  <h3 class="text-2xl font-bold text-white mb-2">Ofertas Especiales</h3>
                  <p class="text-white/80 mb-4">Promociones exclusivas</p>
                  <a href="/promociones" class="inline-block bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">
                    Ver ofertas
                  </a>
