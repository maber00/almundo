---
import { Icon } from 'astro-icon/components';

// Definir la interfaz para categor√≠as de destino
interface DestinationCategory {
  title: string;
  description: string;
  image: string;
  url: string;
  buttonText: string;
}

// Inicializar la variable con el tipo correcto
let activeCategories: DestinationCategory[] = [];

try {
  // Importar getCollection de forma din√°mica
  const { getCollection } = await import('astro:content');
  
  try {
    // Intentar obtener la colecci√≥n destination-categories si existe
    const destinationCategories = await getCollection('destination-categories');
    
    // Mapear los datos a un formato consistente con nuestra interfaz
    activeCategories = destinationCategories
      .filter(category => category.data.active !== false)
      .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
      .map(cat => ({
        title: cat.data.title,
        description: cat.data.description,
        image: cat.data.image,
        url: cat.data.url,
        buttonText: cat.data.buttonText || "Ver todos"
      }));
  } catch (error) {
    console.log('La colecci√≥n destination-categories no existe o est√° vac√≠a');
  }
} catch (error) {
  console.error('Error al cargar datos de categor√≠as:', error);
}

// Datos predeterminados con el tipo correcto
const defaultCategories: DestinationCategory[] = [
  {
    title: "Destinos Nacionales",
    description: "Lo mejor de Colombia",
    image: "/images/uploads/colombia-banner.jpg",
    url: "/destinos/nacionales",
    buttonText: "Ver todos"
  },
  {
    title: "Destinos Internacionales",
